{
  "name": "jira-mcp",
  "version": "1.0.3",
  "description": "JIRA MCP Server for AI-powered integration with JIRA via the Model Context Protocol",
  "type": "module",
  "scripts": {
    "build": "vite build && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "vite",
    "test": "jest --config=jest.config.cjs src/services/__tests__/basic.test.ts",
    "test:watch": "jest --config=jest.config.cjs --watch",
    "test:all": "jest --config=jest.config.cjs",
    "check-setup": "node build/scripts/check-setup.js"
  },
  "bin": {
    "mcps-jira": "./build/index.js",
    "mcps-jira-check": "./build/scripts/check-setup.js"
  },
  "keywords": [
    "mcp",
    "jira",
    "typescript",
    "node",
    "model-context-protocol",
    "ai",
    "claude",
    "anthropic",
    "atlassian"
  ],
  "author": "Brad Taylor",
  "license": "MIT",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.14.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "vite": "^6.2.6",
    "vite-plugin-dts": "^4.5.3"
  }
}
